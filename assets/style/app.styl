@import '_variables'
@import '~vuetify/src/stylus/main'

box-shadow()
    -webkit-box-shadow arguments
    box-shadow arguments

a
    text-decoration none

b,
strong
    font-weight 500

body,
.application.theme--light
    background #fafafa

.theme--light .v-navigation-drawer,
.application .theme--light.v-navigation-drawer
    background-color #f2f2f2

.v-navigation-drawer.main
    .drawer-image
        display block
        height 55px
        padding 10px 16px
        background-color #fafafa

        img
            display inline-block

    .v-list
        background-color inherit

        .v-list__tile
            position relative
            font-weight 400

            .v-list__tile__title
                font-weight 500
                color rgba(0, 0, 0, 0.54)

            &.v-list__tile--active
                background-color rgba(4, 99, 155, 0.06)
                color #0078d4 !important

                &:before
                    content ' '
                    display block
                    position absolute
                    top 0
                    left 0
                    bottom 0
                    width 4px
                    background-color #0078d4

                .v-list__tile__title
                    color #0078d4

    .v-navigation-drawer__border
        display none

    .v-divider
        border-color rgba(0, 0, 0, 0.08)
        background-color transparent !important

.v-navigation-drawer:not(.main)
    &::-webkit-scrollbar
        display none

.v-text-field.v-text-field--solo:not(.v-text-field--solo-flat)
    .v-input__slot
        box-shadow(0 2px 8px rgba(0, 0, 0, 0.05))

.v-pagination__item,
.v-pagination__navigation
    box-shadow(0 2px 8px rgba(0, 0, 0, 0.05))

.v-card,
.v-dialog
    border-radius 0

.v-card:not(.v-card--flat)
    box-shadow(0 2px 8px rgba(0, 0, 0, 0.05))

.v-menu__content
    box-shadow(0 2px 8px rgba(0, 0, 0, 0.05))

.page-title
    font-size 24px
    line-height 32px
    font-weight 300
    margin-bottom 8px

.v-btn
    margin 0

.v-speed-dial,
.v-datatable__actions
    .v-btn
        margin 6px 8px

.v-text-field--outline
    .v-input__slot
        border-radius 8px

.v-text-field--box
    .v-input__slot
        border-radius 8px

        &:before
            display none

    &.v-input--is-focused
        .v-input__slot
            border-bottom-left-radius 0
            border-bottom-right-radius 0

.theme--light .v-table tbody tr[active]
    background #e4efef

.theme--light .v-table thead th,
.application .theme--light.v-table thead th
    color #9e9e9e

.v-datatable thead th.column.sortable i
    margin-left 5px

table.v-table th,
table.v-table td
    white-space nowrap

table.v-table thead tr:first-child
    height 48px

table.v-table thead th
    font-size 14px

table.v-table thead th:focus
    outline 0

table.v-table tbody td
    font-size 14px
    font-weight 300

.v-dialog
    .container
        padding 16px 24px

    .v-card__title
        padding 20px 24px 0

        .title
            font-weight 400

    .v-card__text
        padding 16px 24px
        font-size 16px

.uploader
    display block
    border-radius 8px
    border 2px dashed rgba(0, 0, 0, 0.12) !important
    background-color #fafafa
    color rgba(0, 0, 0, 0.54)

    &.error-messages
        border-color #e91e63 !important
        background-color #FCE4EC
        color #e91e63

    input
        display none

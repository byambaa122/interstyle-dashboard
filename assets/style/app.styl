@require '_variables.styl'
@require '~vuetify/src/stylus/app.styl'

box-shadow()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments

b,
strong
    font-weight 500

body,
.application.theme--light
    background #fafafa

.theme--light .v-navigation-drawer,
.application .theme--light.v-navigation-drawer
    background-color #f2f2f2

.v-navigation-drawer
    .drawer-image
        display: block;
        height: 55px;
        padding: 10px 10px 10px 16px;
        background-color: #04639b;
        img
            display: inline-block;
            
    .v-list
        background-color inherit
        .v-list__tile
            font-weight 400
            &.v-list__tile--active
                background-color rgba(0, 0, 0, 0.1)
                color #04639b !important

    .v-divider
        border-color rgba(0, 0, 0, 0.08)
        background-color transparent !important

.v-navigation-drawer__border
    display none

.v-text-field.v-text-field--solo:not(.v-text-field--solo-flat)
    .v-input__slot
        box-shadow(0 2px 8px rgba(0, 0, 0, .08))

.v-pagination__item,
.v-pagination__navigation
    box-shadow(0 2px 8px rgba(0, 0, 0, .08))

.v-card,
.v-dialog
    border-radius 0

.v-card
    box-shadow(0 2px 8px rgba(0, 0, 0, .08))

.page-title
    font-size 24px
    line-height 32px
    font-weight 300
    margin-bottom 8px

.v-btn
    margin 0

.theme--light .v-table tbody tr[active]
    background #e4efef

.theme--light .v-table thead th,
.application .theme--light.v-table thead th
    color #9e9e9e

.v-datatable thead th.column.sortable i
    margin-left 5px

.v-datatable__progress
    display none

table.v-table th,
table.v-table td
    white-space nowrap

table.v-table thead tr:first-child
    height 48px

table.v-table thead th
    font-size 14px

table.v-table thead th:focus
    outline 0

table.v-table tbody td
    font-size 14px
    font-weight 300

.v-datatable__actions__select
    display none

.v-dialog
    .container
        padding 16px 24px

    .v-card__title
        padding 20px 24px 0
        .title
            font-weight 400

    .v-card__text
        padding 16px 24px
        font-size 16px
